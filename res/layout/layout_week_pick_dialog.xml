<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:roundProgress="http://schemas.android.com/apk/res/com.broadlink.beiangair"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/layout_selector_all_v3"
        android:padding="12dip" >

        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="重复"
                android:textColor="@color/blue"
                android:textSize="20sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginBottom="12dip"
                android:layout_marginTop="12dip"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="200dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/week_1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawableRight="@drawable/ic_check_selector"
                    android:gravity="center_vertical"
                    android:padding="6dip"
                    android:text="周一"
                    android:textColor="@color/dark_black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/week_2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dip"
                    android:drawableRight="@drawable/ic_check_selector"
                    android:gravity="center_vertical"
                    android:padding="6dip"
                    android:text="周二"
                    android:textColor="@color/dark_black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/week_3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dip"
                    android:drawableRight="@drawable/ic_check_selector"
                    android:gravity="center_vertical"
                    android:padding="6dip"
                    android:text="周三"
                    android:textColor="@color/dark_black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/week_4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dip"
                    android:drawableRight="@drawable/ic_check_selector"
                    android:gravity="center_vertical"
                    android:padding="6dip"
                    android:text="周四"
                    android:textColor="@color/dark_black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/week_5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dip"
                    android:drawableRight="@drawable/ic_check_selector"
                    android:gravity="center_vertical"
                    android:padding="6dip"
                    android:text="周五"
                    android:textColor="@color/dark_black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/week_6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dip"
                    android:drawableRight="@drawable/ic_check_selector"
                    android:gravity="center_vertical"
                    android:padding="6dip"
                    android:text="周六"
                    android:textColor="@color/dark_black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/week_7"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="12dip"
                    android:drawableRight="@drawable/ic_check_selector"
                    android:gravity="center_vertical"
                    android:padding="6dip"
                    android:text="周日"
                    android:textColor="@color/dark_black"
                    android:textSize="19sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_marginBottom="12dip"
                android:layout_marginTop="12dip"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/commit_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="12dip"
                        android:background="@drawable/layout_selector_all_v3"
                        android:paddingBottom="3dip"
                        android:paddingLeft="12dip"
                        android:paddingRight="12dip"
                        android:paddingTop="3dip"
                        android:text="取消"
                        android:textColor="@color/gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dip"
                        android:background="@drawable/layout_selector_all_v6"
                        android:paddingBottom="3dip"
                        android:paddingLeft="12dip"
                        android:paddingRight="12dip"
                        android:paddingTop="3dip"
                        android:text="确定"
                        android:textColor="@color/white"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>