<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="150dip" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_top_alarm" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@id/ll_top"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:paddingTop="30dip" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_alrm_notice"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="提醒闹钟"
                android:textColor="@color/dark_black"
                android:textSize="19sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_meeting"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_blue_type_selector"
                android:drawablePadding="4dip"
                android:gravity="center_vertical"
                android:text="开会"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_rest"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_blue_type_selector"
                android:drawablePadding="4dip"
                android:gravity="center_vertical"
                android:text="休息"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_sleep"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_blue_type_selector"
                android:drawablePadding="4dip"
                android:gravity="center_vertical"
                android:text="睡觉"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_other"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_blue_type_selector"
                android:drawablePadding="4dip"
                android:gravity="center_vertical"
                android:text="其他"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_define"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_blue_type_selector"
                android:drawablePadding="4dip"
                android:gravity="center_vertical"
                android:text="自定义"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_event"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_blue_type_selector"
                android:drawablePadding="4dip"
                android:gravity="center_vertical"
                android:text="事件"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="时间"
                android:textColor="@color/dark_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dip"
                android:background="@drawable/layout_selector_all_v7"
                android:gravity="center_vertical"
                android:padding="4dip"
                android:text="2015/01/22"
                android:textColor="@color/dark_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dip"
                android:background="@drawable/layout_selector_all_v7"
                android:gravity="center_vertical"
                android:padding="4dip"
                android:text="10:23"
                android:textColor="@color/dark_black"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/ll_voice_set"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="铃声"
                    android:textColor="@color/dark_black"
                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_voice_set"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="2dip"
                    android:text="默认"
                    android:textColor="@color/dark_black"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_item_more" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:layout_marginBottom="12dip"
            android:layout_marginTop="12dip"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_selector_all_v7"
            android:orientation="horizontal"
            android:padding="4dip" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="内容"
                android:textColor="@color/dark_black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dip"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="可输入10个字符"
                android:textColor="@color/dark_black"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingLeft="20dip"
        android:paddingRight="20dip" >

        <TextView
            android:id="@+id/yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/layout_selector_all_v6"
            android:paddingBottom="7dip"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:paddingTop="7dip"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@id/yes"
            android:background="@drawable/layout_selector_all_v6"
            android:paddingBottom="7dip"
            android:paddingLeft="18dip"
            android:paddingRight="18dip"
            android:paddingTop="7dip"
            android:text="TEST"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_delete_l" />
    </RelativeLayout>

</RelativeLayout>