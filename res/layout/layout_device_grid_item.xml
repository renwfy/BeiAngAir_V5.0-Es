<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_dev_pic_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/dev_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_dev_airdog" />

        <ImageView
            android:id="@+id/dev_outline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_dev_shade"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dev_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dev_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dip"
            android:gravity="center"
            android:maxLength="7"
            android:padding="6dip" 
            android:text="小小airdog"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_shade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_dev_shade" />

        <TextView
            android:id="@+id/dev_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLength="7"
            android:text="小小airdog"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/dev_del"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_below="@id/dev_name1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dip"
            android:src="@drawable/ic_dev_del" />
    </RelativeLayout>

</RelativeLayout>