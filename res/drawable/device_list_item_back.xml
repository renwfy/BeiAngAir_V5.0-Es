<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#fff" />
        </shape>
    </item>
    <item
        android:bottom="1dip"
        android:left="-1dip"
        android:right="1dip"
        android:top="-1dip">
        <shape android:shape="rectangle" >
            <stroke
                android:width="1dip"
                android:color="#C9CACC" />

            <solid android:color="#fff" />
        </shape>
    </item>

</layer-list>