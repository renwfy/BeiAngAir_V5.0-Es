<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CircleProgressBar">
        <attr name="max" format="integer" />
 <!-- 进度条最大值 -->
        <attr name="fill" format="boolean" />
 <!-- 是否填充圆形区域 -->
        <attr name="Paint_Width" format="integer" />
 <!-- 画笔宽度，填充模式下无效，会被重置为0 -->
        <attr name="Paint_Color" format="integer" />
 <!-- 画笔颜色 -->
        <attr name="Inside_Interval" format="integer" />
 <!-- 圆形区域向里缩进的距离 -->
        <attr name="Paint_BG_Color" format="integer" />
 <!-- 背景色 -->
    </declare-styleable>
    <declare-styleable name="wheel_atter">
        <attr name="value_text_color" format="integer" />
 <!-- TEXT_SIZE -->
        <attr name="text_size" format="integer" />
 <!-- TEXT_SIZE -->
        <attr name="value_text_size" format="integer" />
 <!-- VALUE_TEXT_SIZE -->
        <attr name="item_height" format="integer" />
 <!-- item_height -->
        <attr name="item_space" format="integer" />
 <!-- item_space -->
    </declare-styleable>

    <!-- SlidingMenu自定义属性 -->
    <declare-styleable name="SlidingMenu">
        <attr name="mode">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <attr name="viewAbove" format="reference" />
        <attr name="viewBehind" format="reference" />
        <attr name="behindOffset" format="dimension" />
        <attr name="behindWidth" format="dimension" />
        <attr name="behindScrollScale" format="float" />
        <attr name="touchModeAbove">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="touchModeBehind">
            <enum name="margin" value="0" />
            <enum name="fullscreen" value="1" />
        </attr>
        <attr name="shadowDrawable" format="reference" />
        <attr name="shadowWidth" format="dimension" />
        <attr name="fadeEnabled" format="boolean" />
        <attr name="fadeDegree" format="float" />
        <attr name="selectorEnabled" format="boolean" />
        <attr name="selectorDrawable" format="reference" />
    </declare-styleable>
    
    <!--HorizontalListView  -->
     <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

</resources>